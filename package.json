{
  "name": "@elek-io/shared",
  "version": "0.1.0",
  "description": "Exposing shared code like zod schemas and utility functions to be used inside other @elek-io packages.",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "lint": "tsc",
    "dev": "vitest",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "build": "tsup",
    "release": "vitest run --coverage && tsup && changesets publish"
  },
  "dependencies": {
    "slugify": "^1.6.6",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.8",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^1.2.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.2"
  }
}
